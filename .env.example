# ================================
# Development Environment Variables
# ================================
# Copy this file to .env for local development

# Application
DEBUG=true
ENABLE_SWAGGER=true
# Change to a non-obvious path for security (e.g., /internal-api-docs)
# DOCS_URL=change-me
# REDOC_URL=change-me

# Database
# SQLite database path (relative to project root or absolute path)
DATABASE_URL=sqlite+aiosqlite:///data/app.db

# Security
# Generate JWT_SECRET with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=change-me-in-production-use-a-random-64-char-string
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS
# For development, allow all origins (restrict in production!)
CORS_ORIGINS=["*"]

# Docker images
DOCKER_IMAGE=rangermix/twitch-drops-miner:latest
V2_DOCKER_IMAGE=rdavidoff/twitch-channel-points-miner-v2:latest

# Log Streaming
LOG_HISTORY_LINES=100

# Migrations â€” set to false to skip alembic upgrade head on startup
RUN_MIGRATIONS_ON_STARTUP=true
